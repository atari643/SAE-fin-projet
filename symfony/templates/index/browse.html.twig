{% extends 'base.html.twig' %}

{% block title %}Browse Series{% endblock %}

{% block body %}
    <link rel="stylesheet" href="/index.css" />
    <link rel="stylesheet" href="/intro.css" />
    <link rel="stylesheet" href="/glitch.css" />
    <link rel="stylesheet" href="/scroll.css" />

    <h1>Browse Series Via OMDB API</h1>

    <form action="{{ path('app_index_series_browse') }}" method="POST"><input type="text" name="search" class="search" placeholder="Search... for a series" /><button type="submit" class="material-symbols-outlined">search</button></form>

    {% if series != null %}
        <div id="show">
            {% for s in series['Search'] %}
                <div class="showChildSeries" data-title="{{ s['Title'] }}">
                    <img src="{{ s['Poster'] }}" alt="" class="posters">
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}